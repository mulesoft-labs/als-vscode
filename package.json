{
    "name": "aml-vscode",
    "displayName": "AML support",
    "description": "",
    "publisher": "MuleSoft",
    "version": "2.0.0-SNAPSHOT",
    "engines": {
        "vscode": "^1.43.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/extension",
    "activationEvents": [
        "onLanguage:raml"
    ],
    "contributes": {
        "languages": [
            {
                "id": "raml",
                "aliases": [
                    "ALS",
                    "als"
                ],
                "extensions": [
                    ".raml",
                    ".yaml",
                    ".yml",
                    ".json"
                ],
                "configuration": "./raml-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "raml",
                "scopeName": "source.raml",
                "path": "./syntaxes/raml.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "AML Language Server",
            "properties": {
                "amlLanguageServer.run.platform": {
                    "scope": "application",
                    "type": "string",
                    "enum": [
                        "jvm",
                        "js"
                    ],
                    "default": "js",
                    "description": "Run ALS as a node or java app"
                },
                "amlLanguageServer.run.debug": {
                    "scope": "application",
                    "type": "integer",
                    "default": 0,
                    "description": "Only Applies with jvm, the debug port to be used (0 if no debug needed)"
                },
                "amlLanguageServer.run.path": {
                    "scope": "application",
                    "type": "string",
                    "default": null,
                    "description": "Select a specific path to run ALS from (beware it corresponds to the selected platform)"
                },
                "amlLanguageServer.run.logPath": {
                    "scope": "application",
                    "type": "string",
                    "default": null,
                    "description": "Select a specific path to dump logs to"
                },
                "amlLanguageServer.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "verbose",
                    "description": "Traces the communication between VS Code and the language server."
                },
                "amlLanguageServer.formattingOptions.RAML.tabSize": {
                    "type": "number",
                    "default": 4,
                    "description": "How many spaces does each tab represent."
                },
                "amlLanguageServer.formattingOptions.OAS.YAML.tabSize": {
                    "type": "number",
                    "default": 4,
                    "description": "How many spaces does each tab represent."
                },
                "amlLanguageServer.formattingOptions.OAS.JSON.tabSize": {
                    "type": "number",
                    "default": 4,
                    "description": "If prefer spaces, how many spaces does each tab represent."
                },
                "amlLanguageServer.formattingOptions.OAS.JSON.preferSpaces": {
                    "type": "boolean",
                    "default": true,
                    "description": "Use spaces when tabulating rather than tabs"
                },
                "amlLanguageServer.formattingOptions.templateType": {
                    "type": "string",
                    "enum": [
                        "NONE",
                        "SIMPLE",
                        "FULL"
                    ],
                    "default": "FULL",
                    "description": "Preferences for suggested tempaltes"
                }
            }
        },
        "commands": [
            {
                "command": "als.renameFile",
                "title": "ALS Rename file",
                "category": "Modifications",
                "icon": {
                    "light": "path/to/light/icon.svg",
                    "dark": "path/to/dark/icon.svg"
                }
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "resourceLangId == raml",
                    "command": "als.renameFile",
                    "group": "7_modification"
                }
            ]
        }
    },
    "dependencies": {
        "upath": "^1.2.0",
        "vsce": "^1.83.0",
        "vscode-languageclient": "^6.1.3",
        "webpack": "^4.44.1",
        "@mulesoft/als-node-client": "3.3.0-SNAPSHOT.30",
        "@types/node": "^11.15.20",
        "@types/vscode": "1.43.0",
        "ts-loader": "^8.0.1",
        "typescript": "^3.9.7",
        "webpack-cli": "^3.3.12"
    },
    "scripts": {
        "compile": "tsc",
        "vscode:prepublish": "webpack --mode production",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "test-compile": "tsc -p ./"
    }
}
